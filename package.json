{
  "name": "wake-time-calculator",
  "version": "1.0.0",
  "description": "A wake time calculator with weather awareness for runners",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "http-server dist -p 8000 -c-1 --cors",
    "test": "tsx --test tests/unit/**/*.test.ts",
    "format": "prettier --write 'src/**/*.html' 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.html' 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf dist && tsc --project tsconfig.json && cp src/index.html dist/index.html && cp -r src/css dist/css"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "prettier": "^3.3.3",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/njrun1804/wake-time-calculator.git"
  },
  "keywords": [
    "wake-time",
    "calculator",
    "weather",
    "running",
    "planner"
  ],
  "author": "Gemini & User",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  }
}