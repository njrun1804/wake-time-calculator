{
  "name": "wake-time-calculator",
  "version": "1.0.0",
  "description": "A wake time calculator with weather awareness for runners",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "python3 -m http.server 8000",
    "test": "playwright test",
    "test:unit": "node --test \"tests/unit/*.test.js\"",
    "test:core": "playwright test --grep @core",
    "test:awareness": "playwright test --grep @full",
    "test:performance": "playwright test tests/performance",
    "lint": "prettier --check '*.html' 'js/**/*.js'",
    "lint:js": "prettier --check 'js/**/*.js'",
    "format": "prettier --write '*.html' 'js/**/*.js'",
    "format:js": "prettier --write 'js/**/*.js'",
    "validate:html": "html-validate index*.html",
    "validate:all": "npm run lint && npm run validate:html && npm run test:unit"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "html-validate": "^10.0.0",
    "prettier": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/njrun1804/wake-time-calculator.git"
  },
  "keywords": [
    "wake-time",
    "calculator",
    "weather",
    "running",
    "planner"
  ],
  "author": "",
  "license": "MIT"
}
