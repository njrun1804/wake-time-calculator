{
  "name": "wake-time-calculator",
  "version": "1.0.0",
  "description": "A wake time calculator with weather awareness for runners",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "python3 -m http.server 8000",
    "test": "playwright test",
    "test:unit": "node --test 'tests/unit/**/*.test.js'",
    "test:unit:watch": "node --test --watch 'tests/unit/**/*.test.js'",
    "test:unit:coverage": "c8 --reporter=html --reporter=text node --test 'tests/unit/**/*.test.js'",
    "test:core": "playwright test --grep @core",
    "test:awareness": "playwright test --grep @full",
    "test:performance": "playwright test tests/performance",
    "test:visual": "playwright test tests/visual",
    "test:visual:update": "playwright test tests/visual --update-snapshots",
    "test:ci": "playwright test --grep '@core|@full|@performance|@regression' --reporter=dot",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "lint": "prettier --check '*.html' 'js/**/*.js' && eslint .",
    "lint:fix": "prettier --write '*.html' 'js/**/*.js' && eslint --fix .",
    "format": "prettier --write '*.html' 'js/**/*.js'",
    "validate:html": "html-validate index*.html",
    "validate:all": "npm run lint && npm run validate:html && npm run test:unit",
    "clean:cache": "rm -rf playwright-report test-results coverage",
    "deps:check": "npm outdated",
    "deps:audit": "npm audit",
    "docs:generate": "jsdoc2md --files 'js/**/*.js' > docs/API.md",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "c8": "^10.1.3",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "html-validate": "^10.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.4",
    "jsdoc-to-markdown": "^9.1.2",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.html": [
      "prettier --write",
      "html-validate"
    ],
    "js/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/njrun1804/wake-time-calculator.git"
  },
  "keywords": [
    "wake-time",
    "calculator",
    "weather",
    "running",
    "planner"
  ],
  "author": "",
  "license": "MIT"
}
