{
  "name": "wake-time-calculator",
  "version": "1.0.0",
  "description": "A wake time calculator with weather awareness for runners",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "http-server src -p 8000 -c-1 --cors",
    "test": "node --test tests/unit/**/*.test.js",
    "lint": "prettier --check 'src/**/*.html' 'src/js/**/*.js' && eslint .",
    "lint:fix": "prettier --write 'src/**/*.html' 'src/js/**/*.js' && eslint --fix .",
    "format": "prettier --write 'src/**/*.html' 'src/js/**/*.js'",
    "validate:html": "html-validate src/index.html",
    "validate:all": "npm run lint && npm run validate:html && npm test",
    "build": "mkdir -p dist && cp -r src/* dist/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-plugin-html": "^8.1.3",
    "globals": "^16.4.0",
    "html-validate": "^10.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "src/**/*.html": [
      "prettier --write",
      "html-validate"
    ],
    "src/js/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/njrun1804/wake-time-calculator.git"
  },
  "keywords": [
    "wake-time",
    "calculator",
    "weather",
    "running",
    "planner"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  }
}
