{
  // Editor settings optimized for Claude Code
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.fixAll.eslint": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "on",
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": false,
  "editor.suggest.preview": true,
  "breadcrumbs.enabled": true,
  "problems.decorations.enabled": true,

  // Language-specific formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // File management
  "files.exclude": {
    "**/node_modules": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/.history": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.Spotlight-V100": true,
    "**/.Trashes": true,
    "**/.fseventsd": true,
    "**/.TemporaryItems": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/coverage/**": true,
    "**/.nyc_output/**": true,
    "**/dist/**": true,
    "**/tmp/**": true,
    "**/temp/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/tests/visual/screenshots/current/**": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",

  // Search optimization
  "search.exclude": {
    "**/node_modules": true,
    "**/*.log": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/dist": true,
    "**/tmp": true,
    "**/temp": true,
    "**/.git": true,
    "**/tests/visual/screenshots/current": true
  },
  "search.maxResults": 5000,
  "search.smartCase": true,
  "search.followSymlinks": false,

  // JavaScript/ES6 settings
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ESLint
  "eslint.validate": ["javascript"],
  "eslint.format.enable": false,
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "errorLens.followCursor": "activeLine",
  "errorLens.messageTemplate": "$message",

  // Path Intellisense
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,

  // Git integration
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",

  // Performance
  "files.maxConcurrentFilesOpens": 5,

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // Prettier
  "prettier.requireConfig": true,
  "prettier.enableDebugLogs": false,

  // HTML validation
  "html-validate.config": "${workspaceFolder}/.htmlvalidate.json",
  "html-validate.enable": true,

  // Playwright
  "playwright.configPath": "./playwright.config.js",
  "playwright.reuseBrowser": true,
  "playwright.showTrace": false,

  // Thunder Client
  "rest-client.saveResponseInHistory": true,
  "thunder-client.workspacePath": "${workspaceFolder}/.thunder-client"
}



