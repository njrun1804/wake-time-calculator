{
  "name": "moodeats",
  "version": "1.0.0",
  "description": "MoodEats - What's for dinner? A meal suggestion app based on mood",
  "main": "index.html",
  "scripts": {
    "build": "node scripts/build-browse-only.js",
    "build:old": "node scripts/build.js",
    "test": "npm run test:browse",
    "test:browse": "playwright test tests/e2e/browse-only.spec.js",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "serve": "python3 -m http.server 8000",
    "lint": "eslint *.js tests/**/*.js --ignore-pattern node_modules/"
  },
  "keywords": [
    "meal-planning",
    "food",
    "mood",
    "suggestions"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.56.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**",
      "!*.config.js"
    ],
    "testMatch": [
      "**/tests/unit/**/*.test.js",
      "**/tests/unit/**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/e2e/"
    ]
  }
}